local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

local function createGui(scriptUrl1, scriptUrl2)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "ToshiroGui"
    screenGui.Parent = PlayerGui
    screenGui.ResetOnSpawn = false

    -- Frame más pequeño y centrado
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 280, 0, 160)
    frame.Position = UDim2.new(0.5, -140, 0.5, -80)
    frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    frame.BorderSizePixel = 0
    frame.Parent = screenGui

    local shadow = Instance.new("UIStroke")
    shadow.Thickness = 2
    shadow.Color = Color3.fromRGB(0, 0, 0)
    shadow.Transparency = 0.8
    shadow.Parent = frame

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = frame

    -- Título "Toshiro" centrado en la parte superior
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 40)
    title.Position = UDim2.new(0, 0, 0, 10)
    title.Text = "Toshiro"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 24
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.BackgroundTransparency = 1
    title.TextXAlignment = Enum.TextXAlignment.Center
    title.Parent = frame

    -- Label de estado en la parte inferior
    local statusLabel = Instance.new("TextLabel")
    statusLabel.Size = UDim2.new(1, -20, 0, 20)
    statusLabel.Position = UDim2.new(0, 10, 1, -30)
    statusLabel.Text = ""
    statusLabel.TextColor3 = Color3.fromRGB(255, 80, 80)
    statusLabel.BackgroundTransparency = 1
    statusLabel.Font = Enum.Font.SourceSansBold
    statusLabel.TextScaled = true
    statusLabel.TextXAlignment = Enum.TextXAlignment.Center
    statusLabel.Parent = frame

    -- Botón Sea 1 - posicionado debajo del título
    local button1 = Instance.new("TextButton")
    button1.Size = UDim2.new(0, 100, 0, 30)
    button1.Position = UDim2.new(0.5, -110, 0, 60)
    button1.Text = "Sea 1"
    button1.Font = Enum.Font.GothamBold
    button1.TextSize = 14
    button1.BackgroundColor3 = Color3.fromRGB(0, 140, 220)
    button1.TextColor3 = Color3.fromRGB(255, 255, 255)
    button1.Parent = frame

    local corner1 = Instance.new("UICorner")
    corner1.CornerRadius = UDim.new(0, 8)
    corner1.Parent = button1

    button1.MouseButton1Click:Connect(function()
        statusLabel.Text = "Ejecutando..."
        pcall(function()
            loadstring(game:HttpGet(scriptUrl1, true))()
        end)
        screenGui:Destroy() -- Eliminar interfaz después de ejecutar
    end)

    -- Botón Sea 2 - posicionado debajo del título
    local button2 = Instance.new("TextButton")
    button2.Size = UDim2.new(0, 100, 0, 30)
    button2.Position = UDim2.new(0.5, 10, 0, 60)
    button2.Text = "Sea 2"
    button2.Font = Enum.Font.GothamBold
    button2.TextSize = 14
    button2.BackgroundColor3 = Color3.fromRGB(0, 140, 220)
    button2.TextColor3 = Color3.fromRGB(255, 255, 255)
    button2.Parent = frame

    local corner2 = Instance.new("UICorner")
    corner2.CornerRadius = UDim.new(0, 8)
    corner2.Parent = button2

    button2.MouseButton1Click:Connect(function()
        statusLabel.Text = "Ejecutando..."
        pcall(function()
            loadstring(game:HttpGet(scriptUrl2, true))()
        end)
        screenGui:Destroy() -- Eliminar interfaz después de ejecutar
    end)
end

-- URLs de los scripts
local scriptUrl1 = "https://raw.githubusercontent.com/Toshiro-19/Scripts/refs/heads/main/Sea1"
local scriptUrl2 = "https://raw.githubusercontent.com/Toshiro-19/Scripts/refs/heads/main/Sea2"
createGui(scriptUrl1, scriptUrl2)
